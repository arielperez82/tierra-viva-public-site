---
import { isInternalHref, withBase } from "../utils/with-base";

type Props = {
  href: string;
  children?: unknown;
  [key: string]: string | undefined | unknown;
};

const { href, children: _slot, ...rest } = Astro.props;
const resolvedHref = isInternalHref(href) ? withBase(href) : href;
---

<a href={resolvedHref} {...rest}>
  <slot />
</a>
