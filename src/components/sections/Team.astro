---
import Link from "../Link.astro";
---

<section
  id="team"
  aria-labelledby="team-heading"
  class="bg-tierra-cream px-4 py-16 sm:px-6 sm:py-24"
>
  <div class="mx-auto grid max-w-6xl items-center gap-10 lg:grid-cols-2 lg:gap-16">
    <!-- Visual — LEFT on desktop: Portrait Frame -->
    <div class="reveal flex items-center justify-center lg:order-1" aria-hidden="true">
      <div class="relative">
        <!-- Outer decorative ring -->
        <div class="h-64 w-64 rounded-full border-2 border-tierra-stone/40 p-3">
          <!-- Inner ring -->
          <div class="flex h-full w-full items-center justify-center rounded-full border border-tierra-forest/20 bg-white">
            <!-- Monogram -->
            <span
              class="select-none font-serif text-6xl font-light tracking-wider text-tierra-forest/70"
            >
              RM
            </span>
          </div>
        </div>
        <!-- Corner accent marks -->
        <div class="absolute -left-2 -top-2 h-5 w-5 border-l-2 border-t-2 border-tierra-forest/30"></div>
        <div class="absolute -right-2 -top-2 h-5 w-5 border-r-2 border-t-2 border-tierra-forest/30"></div>
        <div class="absolute -bottom-2 -left-2 h-5 w-5 border-b-2 border-l-2 border-tierra-forest/30"></div>
        <div class="absolute -bottom-2 -right-2 h-5 w-5 border-b-2 border-r-2 border-tierra-forest/30"></div>
      </div>
    </div>

    <!-- Text — RIGHT on desktop -->
    <div class="lg:order-2">
      <h2
        id="team-heading"
        class="text-center text-2xl tracking-tight sm:text-3xl lg:text-left"
      >
        Experienced Leadership, Structured Governance
      </h2>
      <div class="mt-10 text-center lg:text-left">
        <p class="text-lg font-semibold text-tierra-ink">Ramon Marmolejos</p>
        <p class="mt-1 text-base text-tierra-graphite/90">Founder &amp; Managing Partner</p>
        <p class="mt-4 text-base leading-relaxed text-tierra-graphite/90 sm:text-lg">
          Educator, entrepreneur, and community builder with over 20 years at the
          intersection of learning innovation, leadership development, and social
          impact. Formerly led global programs across universities and Fortune 500
          companies. Wharton undergraduate and IE Business School MBA.
        </p>
        <p class="mt-6 text-base leading-relaxed text-tierra-graphite/90 sm:text-lg">
          The platform is supported by advisors spanning capital markets,
          development delivery, education operations, and governance—ensuring
          balanced perspective and institutional rigor.
        </p>
      </div>
      <p class="mt-10 text-center lg:text-left">
        <Link
          href="/team"
          class="inline-flex items-center font-medium text-tierra-forest underline decoration-tierra-mid underline-offset-4 transition hover:decoration-tierra-forest focus:outline-none focus:ring-2 focus:ring-tierra-lime focus:ring-offset-2"
        >
          Meet the Team &amp; Advisors
        </Link>
      </p>
    </div>
  </div>
</section>
