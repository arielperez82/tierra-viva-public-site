---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE } from "../consts";
---

<BaseLayout title={`Privacy Policy | ${SITE_TITLE}`} description="Privacy Policy for Tierra Viva.">
  <article class="mx-auto max-w-3xl px-4 py-16 text-tierra-forest-dark sm:px-6 sm:py-24">
    <h1 class="text-2xl font-bold tracking-tight sm:text-3xl">Privacy Policy</h1>
    <p class="mt-6 text-base leading-relaxed text-tierra-forest-dark/95">
      This page will be updated with our privacy policy. For questions, contact
      us at{" "}
      <a
        href="mailto:info@tierravivainvest.com"
        class="font-medium text-tierra-forest underline decoration-tierra-mid underline-offset-4 hover:decoration-tierra-forest focus:outline-none focus:ring-2 focus:ring-tierra-lime focus:ring-offset-2"
      >
        info@tierravivainvest.com
      </a>
      .
    </p>
    <p class="mt-6">
      <a
        href="/"
        class="font-medium text-tierra-forest underline decoration-tierra-mid underline-offset-4 hover:decoration-tierra-forest focus:outline-none focus:ring-2 focus:ring-tierra-lime focus:ring-offset-2"
      >
        Back to home
      </a>
    </p>
  </article>
</BaseLayout>
